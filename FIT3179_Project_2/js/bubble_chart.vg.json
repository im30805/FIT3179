{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 410,
    "autosize": {"resize": true},
    "title": "Number of Spotify Streams per Artist",
    "data": {
      "url": "https://raw.githubusercontent.com/im30805/FIT3179/main/spotify_streams_popularity_by_genre_artist.csv"
    },
    "params": [
      {"name": "grid", "select": "interval", "bind": "scales"},
      {
          "name": "Streams_Above",
          "value": 0,
          "bind": {
              "input": "range",
              "min": 0,
              "max": 100000000,
              "step": 5,
              "name": "Minimum Number of Streams (in Million): "
          }
      },
      {
        "name": "select_region", "select": {"type": "point", "on": "click", "fields": ["region"]}, "bind": "legend"
      },
      {
          "name": "music_genre_selection",
          "bind": {
              "input": "select",
              "options": [
                  null,
                  "Hip Hop",
                  "Pop", 
                  "Rap" ,
                  "Ambigious / Others",
                  "Rock",
                  "R&b", 
                  "K-pop",
                  "Metal",
                  "Country", 
                  "EDM",
                  "Soul", 
                  "Blues",
                  "Funk", 
                  "Electronic / EDM",
                  "Indie", 
                  "Dance",
                  "Jazz",
                  "Folk", 
                  "A Cappella", 
                  "Punk",
                  "Reggae"
              ],
              "labels":[
                  "Show All",
                  "Hip Hop",
                  "Pop", 
                  "Rap" ,
                  "Ambigious / Others",
                  "Rock",
                  "R&b", 
                  "K-pop",
                  "Metal",
                  "Country", 
                  "EDM",
                  "Soul", 
                  "Blues",
                  "Funk", 
                  "Electronic / EDM",
                  "Indie", 
                  "Dance",
                  "Jazz",
                  "Folk", 
                  "A Cappella", 
                  "Punk",
                  "Reggae"
              ],
                  "name": "Music Genre Selection: "
          }
      },
      {
        "name": "region_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Andorra", 
            "Argentina", 
            "Australia", 
            "Austria", 
            "Belgium", 
            "Bolivia", 
            "Brazil", 
            "Bulgaria", 
            "Canada", 
