              "name": "Showing the Artists in the Top 75 for: "
          }
        }
      ],
    "transform": [
        {
            "filter": "region_selection == null || datum.region == region_selection"
        },  
        {
            "aggregate": [{
                "op": "sum",
                "field": "streams",
                "as": "overall_streams_artist"
            }],
            "groupby": ["Artist", "region"]
        },
        {
            "window": [{
                "op": "rank",
                "as": "rank"
            }],
            "sort": [{ "field": "overall_streams_artist", "order": "descending" }]
        }, 
        {
            "filter": "datum.rank <= 75"
        }
  ],
    "mark": "bar",
    "encoding": {
        "x": {
          "aggregate": "sum",
          "field": "overall_streams_artist",
          "type": "quantitative",
          "title": "Total Streams Played on Spotify",
          "axis": {
            "labelColor": "white",
            "titleColor": "white"
          }
        },
        "y": {
          "field": "Artist",
          "type": "nominal",
          "sort": "-x",
          "axis": {
            "labelColor": "white",
            "titleColor": "white"
          }
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "scale": {
            "scheme": "tableau20"
          },
          "title": "Region",
          "legend": {
            "labelColor": "white",
            "titleColor": "white",
            "columns": 6,
            "orient": "top",
            "direction": "horizontal"
          }
        },
        "opacity": {"value": 0.6},
          "tooltip": [
          {"field": "Artist", "type": "nominal"},
          {"field": "region", "type": "nominal", "title": "Region"},
          {"field": "overall_streams_artist", "type": "quantitative", "format": ",", "title": "Total Streams Played"}
        ]
    },
    "config": {
      "background": "#191414",
      "view": {
          "stroke": "#191414"
      },
      "title": {
        "color": "white",
        "subtitleColor": "white"
      },
      "header": {
        "labelColor": "white"
      },
      "font": "Montserrat"
    }
