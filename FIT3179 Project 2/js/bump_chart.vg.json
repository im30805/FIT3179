{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.1.0.json",
    "width": 460, 
    "height": 400,
    "data": {"url": "https://raw.githubusercontent.com/im30805/FIT3179/main/spotify_streams_groupedby_genre_year.csv"},

    "title": "Ranking of Genres",

    "params": [
      {
        "name": "top_n_genres", 
        "value": 10 ,
        "bind": {"input": "range", "min": 1, "max": 30, "step": 1, "name": "Top n " }
      }
    ],

    "transform": [
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "sum", "order": "ascending"}],		
        "groupby": ["chart_year"]
      },
      { "filter": "datum.rank <= top_n_genres" }
    ],

    "encoding": {
      "x": {
        "field": "chart_year",
        "type": "ordinal" ,
        "axis": {
          "labelAngle": 1,
          "labelColor": "white",
          "titleColor": "white"
        },
        "title": "Year on Chart"
      },
      "y": {  
        "field": "rank",
        "type": "quantitative",
        "sort": "descending",
        "scale": {"domain": [0.5, {"expr": "top_n_genres+0.5"} ]},
        "axis": { 
          "labelAngle": 0 ,
          "tickMinStep": 1 ,
          "tickCount": {"expr": "top_n_genres"},
          "labelColor": "white",
          "titleColor": "white"
        },
        "title":  "Genre Ranking"
      }
    },

    "layer": [
      {
        "mark": {
            "type": "line", 
            "interpolate": "linear"
        },
        "encoding": {
            "color": {
              "field": "Genre",
              "legend": {
                "labelColor": "white",
                "titleColor": "white"
              }
            },
            "size":{
                "condition": {
                    "param": "select_genre", 
                    "empty": false, 
                    "value": 6
                },
                "value": 2
            }}
      },
      {
        "params": [
            {"name": "select_genre", "select": {"type": "point", "on": "click", "fields": ["Genre"]}, "bind": "legend"}
        ],

        "mark": {"type" :"circle"},
        "encoding": {
          "color": {
            "condition":  {
              "param": "select_genre", 
              "empty": false, 
              "value": "black"
            }, 
            "field": "Genre"
          },
          "size": {
            "value": 150
          }
        }
      }
    ],
    "config": {
      "background": "#191414",
      "view": {
          "stroke": "#191414"
      },
      "title": {
        "color": "white",
        "subtitleColor": "white"
      },
      "header": {
        "labelColor": "white"
      }
    }
}